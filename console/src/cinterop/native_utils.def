int internal_is_console(){
#ifdef _WIN32
    HWND consoleWnd = GetConsoleWindow();
    DWORD dwProcessId;
    GetWindowThreadProcessId(consoleWnd, &dwProcessId);
    return GetCurrentProcessId() == dwProcessId;
#else
    return isatty(STDOUT_FILENO);
#endif
}
